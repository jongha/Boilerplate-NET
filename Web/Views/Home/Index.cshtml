@using System.Web.Helpers.Resources;
@{
    ViewBag.Title = "Home";
}
<div ng-controller="homeIndexCtrl" class="text-center">
    <div class="text-center index-area">
        <h3>{{ '@Resources.Index.CurrentTimeFormat' | format:[hour, minute] }}</h3>
    </div>

    <div class="form-group center-select">
        <select class="form-control" ng-model="language" ng-change="selectLanguage()" ng-init="language = '@Culture'">
            <option value="ko-KR">@Resources.Index.Korean</option>
            <option value="ja-JP">@Resources.Index.Japanese</option>
            <option value="en-US">@Resources.Index.English</option>
        </select>
    </div>

    <div class="form-group center-select">
        <select class="form-control"
                ng-model="timeZone"
                ng-options="item as item.DisplayName for item in timeZones"
                ng-cloak="true"
                ng-show="timeZones"
                ng-change="selectTimeZone()"
                ng-init="timeZoneParam = '@ViewBag.TimeZoneParam'"></select>
    </div>

    <div class="form-group center-select">
        <img src="~/Assets/Images/image.jpg?@ViewBag.LatestCacheTag" />
    </div>
</div>